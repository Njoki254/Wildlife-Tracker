
{{#partial "content"}}

    <div class="container">
        <div class="row">
            <div class="col-md-7">
                <h2 id="mara">Maasai Mara Reserve</h2>
                <img src="/images/maranorth.jpg" alt="Mara North Map" class="image-fluid map ml-5" id="map">
            </div>
            <div class="col-md-5">
                <h2 class="text-center"><strong>Record a Sighting</strong></h2>

                <form action="/sighting/new" method="post">
                    <div class="form-group">
                        <label class="active " for="rangerName">Ranger Name</label>
                        <input id="rangerName" name="rangerName" type="text" class="form-control">
                    </div>
                    <div class="form-group">
                        <label class="active " for="rangerEmail">Ranger Email</label>
                        <input id="rangerEmail" name="rangerEmail" type="text" class="form-control">
                    </div>

                    <div class="form-group">
                        <label class="active " for="animal_id">Animal Id</label>
                        <input id="animal_id" name="animal_id" type="text" class="form-control">
                    </div>


                    <div class="form-group">
                        <label class="active" for="location">Sight Location</label>
                        <input id="location" name="location" type="text" class="form-control">
                    </div>
                    <button type="submit" class=" btn btn-success" >Save sighting!</button>
                </form>
            </div>
        </div>
    </div>


    <div class="container">

    </div>



{{/partial}}

